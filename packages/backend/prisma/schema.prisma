generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["metrics"]
    binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    // technical
    id String @id @default(uuid())

    // core
    email    String @unique @db.VarChar(55)
    phone    String @unique @db.VarChar(55)
    password String

    fullName String

    referralCode ReferralCodes?

    bonus Int @default(0)
}

model ReferralCodes {
    id   String @id @default(uuid())
    user User   @relation(fields: [userId], references: [id])

    //core
    userId String @unique
}

model EmailConfirm {
    // core
    email     String   @unique @db.VarChar(55)
    code      String
    // tecnical
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Company {
    // technical
    id String @id @default(uuid())

    // core
    email    String @unique @db.VarChar(55)
    phone    String @unique @db.VarChar(55)
    password String

    companyName String?
}
